<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GENERALE -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- PARTE SUPERIORE TESTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="add"
                android:textSize="34sp" />

        </LinearLayout>

        <!-- PARTE CENTRALE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="636dp"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_card"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardElevation="25dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edit_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="entrez votre question"
                        android:textColor="#ffffff">
                    </EditText>

                    <View
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/edit_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="200dp"
                        android:text="entrez votre reponse"
                        android:textColor="#ffffff">
                    </EditText>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/photo_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:clickable="true"
                        app:backgroundTint="#8C8C8C"
                        app:srcCompat="@android:drawable/ic_menu_camera" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/photo_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:clickable="true"
                        app:backgroundTint="#8C8C8C"
                        app:srcCompat="@android:drawable/ic_menu_camera" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <!--
            <ImageView
                android:id="@+id/edit_card"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/rect225" />
                -->

        </LinearLayout>

        <!-- PARTE INFERIORE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- BOTTONE RIFIUTA -->
            <Button
                android:id="@+id/reject_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reject"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <!-- BOTTONE CONFERMA -->
            <Button
                android:id="@+id/approve_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>